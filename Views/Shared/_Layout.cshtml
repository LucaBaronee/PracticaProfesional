<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyetoSetilPF</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyetoSetilPF.styles.css" asp-append-version="true" />

    <style>
        /* Navbar mejorado */
        .navbar {
            background: #ffffff;
            border-bottom: 2px solid #f1f1f1;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            height: 70px;
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        .nav-link {
            font-weight: 500;
            padding-left: 15px !important;
            padding-right: 15px !important;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: #0d6efd !important;
                transform: translateY(-2px);
            }

        /* Footer */
        footer {
            background: #f8f9fa;
            padding: 20px 0;
            margin-top: 40px;
            border-top: 2px solid #e6e6e6;
        }

        /* Contenido principal */
        main {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">

                <!-- LOGO + Marca -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Logo/logosetil.png" alt="Logo Setil" />
                    
                </a>

                <!-- Botón responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Admin") || User.IsInRole("Administracion"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Ciudad" asp-action="Index">Ciudad</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Pasajero" asp-action="Index">Pasajerooooooooooo</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Coordinador" asp-action="Index">Coordinador</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Administracion") || User.IsInRole("Coordinador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Viaje" asp-action="Index">Viaje</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">Usuario</a>
                            </li>
                        }
                    </ul>

                    <!-- Login -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="text-muted text-center">
        <div class="container">
            <span>&copy; 2025 - ProyetoSetilPF</span> |
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>