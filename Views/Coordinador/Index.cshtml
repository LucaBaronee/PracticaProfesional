    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Sexo</th>
                    <th>DNI</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.coordinador)
                {
                    <tr>
                        <td>@item.Apellido</td>
                        <td>@item.Nombre</td>
                        <td>@item.Edad</td>
                        <td>@item.Sexo?.Descripcion</td>
                        <td>@item.Pasaporte</td>
                        <td>@item.Telefono</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                                Ver Detalles
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ====================== -->
    <!--   TARJETAS (Mobile)    -->
    <!-- ====================== -->
    <div class="d-block d-md-none">
        @foreach (var item in Model.coordinador)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">

                    <h5 class="fw-bold text-primary">@item.Apellido, @item.Nombre</h5>

                    <p class="mb-1"><strong>Edad:</strong> @item.Edad</p>
                    <p class="mb-1"><strong>Sexo:</strong> @item.Sexo?.Descripcion</p>
                    <p class="mb-1"><strong>DNI:</strong> @item.Pasaporte</p>
                    <p class="mb-1"><strong>Teléfono:</strong> @item.Telefono</p>
                    <p class="mb-3"><strong>Email:</strong> @item.Email</p>

                    <div class="d-grid gap-2 mt-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>

                </div>
            </div>
        }
    </div>



    <!-- Paginador -->
    <partial name="_Paginador" for="@Model.paginador" />
</div>