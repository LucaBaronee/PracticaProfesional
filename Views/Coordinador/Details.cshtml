@model ProyetoSetilPF.Models.Coordinador

@{
    ViewData["Title"] = "Perfil del Coordinador";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-primary mb-2 mb-md-0">
            <i class="bi bi-person-badge me-2"></i>@Model.Nombre @Model.Apellido
        </h2>
        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </a>
        </div>
    </div>

    <!-- TARJETA PRINCIPAL -->
    <div class="card shadow-sm rounded-4 overflow-hidden d-flex flex-column flex-md-row">
        <!-- FOTO -->
        <div class="flex-shrink-0 bg-body-secondary d-flex align-items-center justify-content-center p-3" style="min-width:300px;">
            @if (!string.IsNullOrEmpty(Model.FotoPasaporte))
            {
                <img src="~/fotos/@Model.FotoPasaporte" class="img-fluid rounded-3 border" style="max-height:310px; object-fit:cover;" />
            }
            else
            {
                <div class="text-muted fw-semibold">Sin foto de pasaporte</div>
            }
        </div>

        <!-- INFO DETALLADA -->
        <div class="flex-grow-1 p-4">
            <h4 class="fw-bold text-secondary mb-3">
                <i class="bi bi-info-circle me-2"></i>Información
            </h4>

            <div class="row mb-2">
                <div class="col-5 fw-bold">Apellido:</div>
                <div class="col-7">@Model.Apellido</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Nombre:</div>
                <div class="col-7">@Model.Nombre</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Edad:</div>
                <div class="col-7">@Model.Edad</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Sexo:</div>
                <div class="col-7">@Model.Sexo?.Descripcion</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Pasaporte:</div>
                <div class="col-7">@Model.Pasaporte</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Fecha de Nacimiento:</div>
                <div class="col-7">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Teléfono:</div>
                <div class="col-7">@Model.Telefono</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Vencimiento:</div>
                <div class="col-7">@Model.Vencimiento.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row mb-2">
                <div class="col-5 fw-bold">Email:</div>
                <div class="col-7">@Model.Email</div>
            </div>

            <!-- Botón para ampliar foto -->
            @if (!string.IsNullOrEmpty(Model.FotoPasaporte))
            {
                <div class="text-center mt-3">
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#fotoPasaporteModal">
                        <i class="bi bi-zoom-in me-1"></i> Ampliar foto
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- MODAL PARA ZOOM -->
    <div class="modal fade" id="fotoPasaporteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <button type="button" class="btn-close position-absolute end-0 m-3" data-bs-dismiss="modal"></button>
                    <img src="~/fotos/@Model.FotoPasaporte" class="img-fluid w-100 rounded" />
                </div>
            </div>
        </div>
    </div>
</div>