@model ProyetoSetilPF.Models.Pasajero

@{
    ViewData["Title"] = "Perfil del Pasajero";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-person-badge me-2"></i>@Model.Nombre @Model.Apellido
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="card shadow-lg rounded-3 overflow-hidden">
        <div class="row g-0">
            <!-- Foto del pasaporte -->
            <div class="col-md-4 text-center bg-light d-flex align-items-center justify-content-center p-3">
                @if (!string.IsNullOrEmpty(Model.FotoPasaporte))
                {
                    <img src="~/fotos/@Model.FotoPasaporte" class="img-fluid rounded border border-2" style="max-height:300px;" />
                }
                else
                {
                    <div class="text-muted fw-bold">No hay foto del pasaporte</div>
                }
            </div>

            <!-- Información del pasajero -->
            <div class="col-md-8 p-4">
                <h4 class="text-secondary mb-3">Información del pasajero</h4>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Apellido:</div>
                    <div class="col-sm-7">@Model.Apellido</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Nombre:</div>
                    <div class="col-sm-7">@Model.Nombre</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Edad:</div>
                    <div class="col-sm-7">@Model.Edad</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Sexo:</div>
                    <div class="col-sm-7">@Model.Sexo?.Descripcion</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Pasaporte:</div>
                    <div class="col-sm-7">@Model.Pasaporte</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Fecha de Nacimiento:</div>
                    <div class="col-sm-7">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Teléfono:</div>
                    <div class="col-sm-7">@Model.Telefono</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Vencimiento:</div>
                    <div class="col-sm-7">@Model.Vencimiento.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        </div>
    </div>
</div>