        </h2>
        <p class="text-secondary">Confirma que deseas eliminar este pasajero</p>
    </div>

    <!-- Card con detalles -->
    <div class="card shadow-sm rounded-4 p-4 mb-4 d-flex flex-column flex-md-row">
        <!-- FOTO -->
        <div class="flex-shrink-0 bg-body-secondary d-flex align-items-center justify-content-center p-3" style="min-width:250px;">
            @if (!string.IsNullOrEmpty(Model.FotoPasaporte))
            {
                <div class="text-center">
                    <img src="~/fotos/@Model.FotoPasaporte" alt="Foto Pasaporte" class="img-fluid rounded-3 border mb-2" style="max-height:250px; object-fit:cover;" />
                </div>
            }
            else
            {
                <div class="text-muted fw-semibold">Sin foto de pasaporte</div>
            }
        </div>

        <!-- INFO DETALLADA -->
        <div class="flex-grow-1 p-4">
            <h5 class="fw-bold mb-3">@Model.Nombre @Model.Apellido</h5>
            <hr />
            <dl class="row mb-0">
                <dt class="col-5 fw-bold">Edad:</dt>
                <dd class="col-7">@Model.Edad</dd>

                <dt class="col-5 fw-bold">Sexo:</dt>
                <dd class="col-7">@Model.Sexo?.Descripcion</dd>

                <dt class="col-5 fw-bold">Pasaporte:</dt>
                <dd class="col-7">@Model.Pasaporte</dd>

                <dt class="col-5 fw-bold">Fecha de Nacimiento:</dt>
                <dd class="col-7">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                <dt class="col-5 fw-bold">Teléfono:</dt>
                <dd class="col-7">@Model.Telefono</dd>

                <dt class="col-5 fw-bold">Vencimiento:</dt>
                <dd class="col-7">@Model.Vencimiento.ToString("dd/MM/yyyy")</dd>
            </dl>

