@model ProyetoSetilPF.ViewModel.PasajeroVm

@{
    ViewData["Title"] = "Gestión de Pasajeros";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i>Pasajeros
        </h2>
        <div class="d-flex gap-2 mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Pasajero
            </a>
            <a asp-action="Eliminados" class="btn btn-warning">
                <i class="bi bi-trash3-fill me-1"></i> Eliminados
            </a>
            <a asp-action="Importar" class="btn btn-secondary">
                <i class="bi bi-file-earmark-arrow-up me-1"></i> Importar
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">

            @using (Html.BeginForm("Index", "Pasajero", FormMethod.Get, new { @class = "row g-3" }))
            {
                <div class="col-md-4">
                    <label class="form-label" for="busqNombre">Nombre</label>
                    <input id="busqNombre" type="text" name="busqNombre" value="@Model.busquedaNombre" placeholder="Nombre" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label" for="busqApellido">Apellido</label>
                    <input id="busqApellido" type="text" name="busqApellido" value="@Model.busquedaApellido" placeholder="Apellido" class="form-control" />
                </div>

                <div class="col-md-4 d-flex align-items-end justify-content-start gap-3">
                    <div class="form-check">
                        <input id="mostrarTodos" type="checkbox" name="mostrarTodos" value="true"
                               class="form-check-input" @(Model.MostrarTodos ? "checked" : "") />
                        <label class="form-check-label" for="mostrarTodos">
                            Mostrar pasajeros en viaje
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Buscar
                    </button>
                </div>
            }

        </div>
    </div>

    <!-- Mensaje -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">@TempData["Mensaje"]</div>
    }

    <!-- Actualizar estados -->
    @using (Html.BeginForm("ActualizarEstados", "Pasajero", FormMethod.Post, new { @class = "mb-3" }))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-arrow-repeat me-1"></i> Actualizar estados pasajeros
        </button>
    }

    
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Sexo</th>
                    <th>Pasaporte</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.pasajero)
                {
                    <tr>
                        <td>@item.Apellido</td>
                        <td>@item.Nombre</td>
                        <td>@item.Edad</td>
                        <td>@item.Sexo?.Descripcion</td>
                        <td>@item.Pasaporte</td>
                        <td>
                            <div class="d-flex gap-1">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ====================== -->
    <!--   TARJETAS (Mobile)    -->
    <!-- ====================== -->
    <div class="d-block d-md-none">
        @foreach (var item in Model.pasajero)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">

                    <h5 class="fw-bold text-primary">@item.Apellido, @item.Nombre</h5>

                    <p class="mb-1"><strong>Edad:</strong> @item.Edad</p>
                    <p class="mb-1"><strong>Sexo:</strong> @item.Sexo?.Descripcion</p>
                    <p class="mb-1"><strong>DNI:</strong> @item.Pasaporte</p>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>

                </div>
            </div>
        }
    </div>
    <partial name="_Paginador" for="@Model.paginador" />

</div>