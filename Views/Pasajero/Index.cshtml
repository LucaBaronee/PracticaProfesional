@model ProyetoSetilPF.ViewModel.PasajeroVm

@{
    ViewData["Title"] = "Gestión de Pasajeros";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-3 mb-md-0">
            <i class="bi bi-people-fill me-2"></i>Pasajeros
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Pasajero
            </a>
            <a asp-action="Eliminados" class="btn btn-warning">
                <i class="bi bi-trash3-fill me-1"></i> Pasajeros Eliminados
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Pasajero", FormMethod.Get, new { @class = "row g-3 align-items-end" }))
            {
                <div class="col-md-4">
                    <label for="busqNombre" class="form-label">Nombre</label>
                    <input type="text" name="busqNombre" value="@Model.busquedaNombre" class="form-control" placeholder="Nombre" />
                </div>
                <div class="col-md-4">
                    <label for="busqApellido" class="form-label">Apellido</label>
                    <input type="text" name="busqApellido" value="@Model.busquedaApellido" class="form-control" placeholder="Apellido" />
                </div>
                
                <div class="col-md-4 d-flex align-items-center">
                    <div class="form-check me-3">
                        <input type="checkbox" name="mostrarTodos" value="true" class="form-check-input" @(Model.MostrarTodos ? "checked" : "") />
                        <label class="form-check-label">Mostrar todos</label>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Buscar
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Mensaje -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">@TempData["Mensaje"]</div>
    }

    <!-- Actualizar estados -->
    @using (Html.BeginForm("ActualizarEstados", "Pasajero", FormMethod.Post, new { @class = "mb-3" }))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-arrow-repeat me-1"></i> Actualizar estados pasajeros
        </button>
    }

    <!-- Tabla de pasajeros -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Sexo</th>
                    <th>DNI</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.pasajero)
                {
                    <tr>
                        <td>@item.Apellido</td>
                        <td>@item.Nombre</td>
                        <td>@item.Edad</td>
                        <td>@item.Sexo?.Descripcion</td>
                        <td>@item.Pasaporte</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                                Ver Detalles
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginador -->
    <partial name="_Paginador" for="@Model.paginador" />
</div>