@model ProyetoSetilPF.Models.Pasajero

@{
    ViewData["Title"] = "Editar Pasajero";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-pencil-square me-2"></i>Editar Pasajero
    </h2>

    <div class="card shadow rounded-3 p-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <!-- Columna izquierda: Datos generales -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Edad" class="form-label"></label>
                        <input asp-for="Edad" class="form-control" />
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SexoId" class="form-label"></label>
                        <select asp-for="SexoId" class="form-select" asp-items="ViewBag.SexoId"></select>
                        <span asp-validation-for="SexoId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Pasaporte" class="form-label"></label>
                        <input asp-for="Pasaporte" class="form-control" />
                        <span asp-validation-for="Pasaporte" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaNacimiento" class="form-label"></label>
                        <input asp-for="FechaNacimiento" class="form-control" type="date" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                </div>

                <!-- Columna derecha: Foto -->
                <div class="col-md-6 text-center">
                    <label class="form-label d-block mb-2 fw-bold">Foto Pasaporte</label>

                    @if (!string.IsNullOrEmpty(Model.FotoPasaporte))
                    {
                        <!-- Mostrar foto actual -->
                        <img src="~/fotos/@Model.FotoPasaporte"
                             class="img-fluid rounded border mb-3"
                             style="max-height:250px; display:block; margin:auto;" />
                    }
                    else
                    {
                        <div class="text-muted fw-bold mb-3">No hay foto disponible</div>
                    }

                    <!-- Input para subir nueva foto -->
                    <input type="file" id="foto" name="foto" accept="image/jpeg" class="form-control mb-2" />

                    <!-- Campo oculto para mantener la foto anterior si no se cambia -->
                    <input type="hidden" name="FotoPasaporte" value="@Model.FotoPasaporte" />

                    <span asp-validation-for="FotoPasaporte" class="text-danger"></span>
                </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Guardar cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}