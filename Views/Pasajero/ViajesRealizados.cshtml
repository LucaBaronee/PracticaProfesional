@model List<ProyetoSetilPF.Models.Viaje>

@{
    ViewData["Title"] = "Viajes Realizados";
}

<div class="container py-4">

    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-airplane-check me-2"></i>Viajes Realizados
    </h2>

    <!-- Botón volver -->
    <a asp-controller="Pasajero" asp-action="Details" asp-route-id="@ViewBag.PasajeroId"
       class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver al perfil
    </a>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Este pasajero no tiene viajes realizados.</div>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Descripción</th>
                    <th>Fecha Ida</th>
                    <th>Fecha Vuelta</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var viaje in Model)
                {
                    <tr>
                        <td>@viaje.Descripcion</td>
                        <td>@viaje.FechaIda.ToString("dd/MM/yyyy")</td>
                        <td>@viaje.FechaVuelta.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-controller="Viaje" asp-action="DetallesCompleto" asp-route-id="@viaje.Id"
                               class="btn btn-info btn-sm">
                                Ver detalle completo
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>