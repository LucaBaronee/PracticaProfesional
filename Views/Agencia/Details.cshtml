@model ProyetoSetilPF.Models.Agencia

@{
    ViewData["Title"] = "Detalles de Agencia";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-building me-2"></i>@Model.Nombre
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </a>
        </div>
    </div>

    <!-- Tarjeta con detalles -->
    <div class="card shadow-sm rounded-4 p-4">
        <h4 class="fw-bold text-secondary mb-3">
            <i class="bi bi-info-circle me-2"></i>Información de la Agencia
        </h4>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Nombre:</div>
            <div class="col-sm-8">@Model.Nombre</div>
        </div>
    </div>
</div>