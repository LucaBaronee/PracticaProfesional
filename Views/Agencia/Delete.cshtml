@model ProyetoSetilPF.Models.Agencia

@{
    ViewData["Title"] = "Eliminar Agencia";
}

<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-trash-fill me-2"></i>Eliminar Agencia
        </h2>
        <p class="text-secondary">Confirma que deseas eliminar esta agencia</p>
    </div>

    <!-- Card con detalles -->
    <div class="card shadow-sm rounded-4 p-4 mb-4">
        <h5 class="fw-bold mb-3">Agencia</h5>
        <hr />
        <dl class="row mb-0">
            <dt class="col-4 fw-bold">Nombre:</dt>
            <dd class="col-8">@Model.Nombre</dd>
        </dl>
    </div>

    <!-- Botones de confirmación -->
    <div class="d-flex justify-content-center gap-3">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-check-circle me-1"></i> Confirmar eliminación
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
        </a>
    </div>
</div>