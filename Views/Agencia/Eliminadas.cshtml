@model IEnumerable<ProyetoSetilPF.Models.Agencia>

@{
    ViewData["Title"] = "Agencias Eliminadas";
}

<div class="container py-4">

    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash-fill me-2"></i>Agencias Eliminadas
    </h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    <p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver a Agencias Activas
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th style="width:150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agencia in Model)
                {
                    <tr>
                        <td>@agencia.Nombre</td>
                        <td>
                            <form asp-action="Reactivar" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@agencia.Id" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="bi bi-arrow-counterclockwise me-1"></i> Reactivar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>