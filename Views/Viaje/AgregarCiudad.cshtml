@model ProyetoSetilPF.ViewModel.CiudadVM

<h2>Agregar Ciudades al Viaje</h2>

<form method="get" asp-action="AgregarCiudad">
    <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
    <div class="input-group mb-3">
        <input type="text" name="busqueda" value="@Model.busqNombre" class="form-control" placeholder="Buscar ciudad...">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ciudad</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ciudad in Model.ciudad)
        {
            <tr>
                <td>@ciudad.Descripcion</td>
                <td>
                    <form asp-action="AgregarCiudad" method="post">
                        <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
                        <input type="hidden" name="ciudadId" value="@ciudad.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle"></i> Agregar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>