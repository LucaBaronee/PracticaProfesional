@model ProyetoSetilPF.Models.Viaje

@{
    ViewData["Title"] = "Eliminar Viaje";
}

<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-trash-fill me-2"></i>Eliminar Viaje
        </h2>
        <p class="text-secondary">¿Estás seguro que quieres eliminar este viaje?</p>
    </div>

    <!-- Card con detalles del viaje -->
    <div class="card shadow-sm rounded mb-4">
        <div class="card-body">
            <h5 class="card-title fw-bold">@Model.Descripcion</h5>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-4">Fecha de Ida</dt>
                <dd class="col-sm-8">@Model.FechaIda.ToShortDateString()</dd>

                <dt class="col-sm-4">Fecha de Vuelta</dt>
                <dd class="col-sm-8">@Model.FechaVuelta.ToShortDateString()</dd>

                <dt class="col-sm-4">Balance</dt>
                <dd class="col-sm-8">@Model.Balance.ToString("C")</dd>
            </dl>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i>Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Volver a la lista
        </a>
    </div>
</div>