                @model ProyetoSetilPF.Models.Viaje

@{
    ViewData["Title"] = "Editar Viaje";
}

<h2 class="mb-4">Editar Viaje</h2>

<div class="card shadow-sm rounded-4 p-4">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label fw-semibold"></label>
            <input asp-for="Descripcion" class="form-control rounded-3 shadow-sm" placeholder="Ingrese descripción del viaje" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FechaIda" class="form-label fw-semibold"></label>
                <input asp-for="FechaIda" type="date" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="FechaIda" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="FechaVuelta" class="form-label fw-semibold"></label>
                <input asp-for="FechaVuelta" type="date" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="FechaVuelta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonedaId" class="control-label"></label>
                <select asp-for="MonedaId" class="form-control" asp-items="ViewBag.MonedaId"></select>
                <span asp-validation-for="MonedaId" class="text-danger"></span>
            </div>

        </div>

        <!-- 🔒 Campo de solo lectura (no editable) -->
        <div class="mb-3">
            <label asp-for="Balance" class="form-label fw-semibold"></label>
            <input class="form-control rounded-3 shadow-sm bg-light"
                   value="@Model.Balance.ToString("N2")" readonly />
            <small class="text-muted">Este valor no puede modificarse manualmente.</small>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Volver
            </a>

            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-save2 me-2"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}