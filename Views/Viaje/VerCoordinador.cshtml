@model IEnumerable<ProyetoSetilPF.Models.Coordinador>

<h2 class="mb-4">Coordinadores del Viaje</h2>

<!-- Tabla de coordinadores existentes -->
<table class="table table-striped table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pasaporte</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coord in Model)
        {
            <tr>
                <td>@coord.Nombre</td>
                <td>@coord.Apellido</td>
                <td>@coord.Pasaporte</td>
                <td>
                    <a asp-controller="Coordinador" asp-action="Details" asp-route-id="@coord.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-eye-fill me-1"></i> Ver
                    </a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Administracion")) 
                    {
                        <form asp-action="EliminarCoordinadorDelViaje" method="post" onsubmit="return confirm('¿Seguro que deseas quitar este coordinador del viaje?');">
                            <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
                            <input type="hidden" name="coordinadorId" value="@coord.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-person-dash-fill me-1"></i> Quitar
                            </button>
                        </form>
                    }
                    
                    

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para ir a la vista de agregar coordinador (solo para Admin/Administración) -->
@if (User.IsInRole("Admin") || User.IsInRole("Administracion"))
{
    <a asp-action="AgregarCoordinador" asp-route-viajeId="@ViewBag.ViajeId" class="btn btn-success rounded-pill px-4 py-2 mt-3">
        <i class="bi bi-person-plus-fill me-2"></i> Agregar Coordinador
    </a>
}

<a asp-action="Index" class="btn btn-secondary rounded-pill px-3 py-2 mt-3">
    <i class="bi bi-arrow-left-circle me-1"></i> Volver a Viajes
</a>