@model IEnumerable<ProyetoSetilPF.Models.ViajePasajero>

<h2 class="mb-4">Pasajeros del Viaje</h2>

<!-- Tabla de pasajeros existentes -->
<table class="table table-striped table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pasaporte</th>
            <th>Agencia</th>
            <th>Sube en:</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vp in Model)
        {
            <tr>
                <td>@vp.Pasajero.Nombre</td>
                <td>@vp.Pasajero.Apellido</td>
                <td>@vp.Pasajero.Pasaporte</td>
                <td>@vp.Agencia?.Nombre</td> <!-- Agencia asignada -->
                <td>@vp.PuntoSubida?.Descripcion</td>
                <td>
                    <a asp-controller="Pasajero" asp-action="Details" asp-route-id="@vp.Pasajero.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-eye-fill me-1"></i> Ver
                    </a>
                    <form asp-action="EliminarPasajeroDelViaje" method="post" onsubmit="return confirm('¿Seguro que deseas quitar este pasajero del viaje?');" class="d-inline">
                        <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
                        <input type="hidden" name="pasajeroId" value="@vp.Pasajero.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                              <i class="bi bi-person-dash-fill me-1"></i> Quitar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para ir a la vista de agregar pasajero (solo para Admin/Administración) -->
@if (User.IsInRole("Admin") || User.IsInRole("Administracion"))
{
    <a asp-action="AgregarPasajero" asp-route-viajeId="@ViewBag.ViajeId" class="btn btn-success rounded-pill px-4 py-2 mt-3">
        <i class="bi bi-person-plus-fill me-2"></i> Agregar Pasajero
    </a>
}

<a asp-action="Index" class="btn btn-secondary rounded-pill px-3 py-2 mt-3">
    <i class="bi bi-arrow-left-circle me-1"></i> Volver a Viajes
</a>