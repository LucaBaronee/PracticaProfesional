@model ProyetoSetilPF.ViewModel.ViajeVM

@{
    ViewData["Title"] = "Historial de Viajes";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-3 mb-md-0">
            <i class="bi bi-clock-history me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver a Viajes Activos
        </a>
    </div>

    <!-- Tabla de viajes finalizados -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-secondary text-center text-nowrap">
                        <tr>
                            <th>Descripción</th>
                            <th>Fecha Ida</th>
                            <th>Fecha Vuelta</th>
                            <th>Balance</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.viaje)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Descripcion</td>
                                <td>@item.FechaIda.ToString("dd/MM/yyyy")</td>
                                <td>@item.FechaVuelta.ToString("dd/MM/yyyy")</td>
                                <td class="fw-bold text-success">@item.Balance.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-action="DetallesCompleto" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-pill text-white">
                                        <i class="bi bi-eye-fill me-1"></i> Ver
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginador -->
    <div class="mt-4">
        <partial name="_Paginador" for="@Model.paginador" />
    </div>
</div>