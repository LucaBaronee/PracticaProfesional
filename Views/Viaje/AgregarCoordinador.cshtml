@model ProyetoSetilPF.ViewModel.CoordinadorVM

@{
    ViewData["Title"] = "Agregar Coordinador al Viaje";
}

<h2 class="mb-4">Agregar Coordinador</h2>

<form method="get" asp-action="AgregarCoordinador" class="mb-3">
    <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
    <div class="input-group">
        <input type="text" name="busqueda" class="form-control" placeholder="Buscar por nombre, apellido o pasaporte" value="@ViewBag.Busqueda" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pasaporte</th>
            <th>Agregar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coord in Model.coordinador)
        {
            <tr>
                <td>@coord.Nombre</td>
                <td>@coord.Apellido</td>
                <td>@coord.Pasaporte</td>
                <td>
                    <form method="post" asp-action="AgregarCoordinador">
                        <input type="hidden" name="viajeId" value="@ViewBag.ViajeId" />
                        <input type="hidden" name="coordinadorId" value="@coord.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-person-check-fill me-1"></i> Agregar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-4">
    <partial name="_Paginador" for="@Model.paginador" />
</div>

<a asp-action="VerCoordinador" asp-route-id="@ViewBag.ViajeId" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left-circle me-1"></i> Volver a Coordinadores
</a>