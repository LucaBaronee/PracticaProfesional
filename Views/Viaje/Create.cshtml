@model ProyetoSetilPF.Models.Viaje

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Viaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIda" class="control-label"></label>
                <input asp-for="FechaIda" class="form-control" />
                <span asp-validation-for="FechaIda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVuelta" class="control-label"></label>
                <input asp-for="FechaVuelta" class="form-control" />
                <span asp-validation-for="FechaVuelta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label class="control-label">Ciudades</label>
                <select asp-items="ViewBag.Ciudad" class="form-control" multiple="multiple" name="ciudadIds">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Pasajeros</label>
                <select asp-items="ViewBag.Pasajero" class="form-control" multiple="multiple" name="pasajeroIds">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Coordinadores</label>
                <select asp-items="ViewBag.Coordinador" class="form-control" multiple="multiple" name="coordinadorIds">
                </select>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
