 @model ProyetoSetilPF.Models.Viaje

@{
    ViewData["Title"] = "Nuevo Viaje";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex align-items-center rounded-top-4">
            <i class="bi bi-airplane-engines me-2 fs-4"></i>
            <h4 class="mb-0">Crear nuevo viaje</h4>
        </div>

        <div class="card-body p-4 bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label fw-semibold">
                            <i class="bi bi-info-circle"></i> Descripción
                        </label>
                        <input asp-for="Descripcion" class="form-control rounded-3 shadow-sm" autocomplete="off" />
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="FechaIda" class="form-label fw-semibold">
                            <i class="bi bi-calendar-event"></i> Fecha de ida
                        </label>
                        <input asp-for="FechaIda" type="date" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="FechaIda" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="FechaVuelta" class="form-label fw-semibold">
                            <i class="bi bi-calendar-check"></i> Fecha de vuelta
                        </label>
                        <input asp-for="FechaVuelta" type="date" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="FechaVuelta" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Balance" class="form-label fw-semibold">
                            <i class="bi bi-cash-coin"></i> Balance
                        </label>
                        <input asp-for="Balance" type="number" step="0.01" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="Balance" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row g-4">
                    <div class="col-md-12">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-geo-alt"></i> Ciudades
                        </label>
                        <select asp-items="ViewBag.Ciudad" class="form-select select2 rounded-3 shadow-sm" multiple name="ciudadIds"></select>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-person-bounding-box"></i> Pasajeros
                        </label>
                        <select asp-items="ViewBag.Pasajero" class="form-select select2 rounded-3 shadow-sm" multiple name="pasajeroIds"></select>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-people-fill"></i> Coordinadores
                        </label>
                        <select asp-items="ViewBag.Coordinador" class="form-select select2 rounded-3 shadow-sm" multiple name="coordinadorIds"></select>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                        <i class="bi bi-arrow-left-circle me-2"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                        <i class="bi bi-check-circle me-2"></i> Guardar viaje
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Select2 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Buscar y seleccionar...",
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function () { return "No se encontraron resultados"; },
                    searching: function () { return "Buscando..."; }
                }
            });
        });
    </script>
}
