@model IEnumerable<ProyetoSetilPF.Models.Ciudad>

<h2>Ciudades del Viaje</h2>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Ciudad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ciudad in Model)
        {
            <tr>
                <td>@ciudad.Descripcion</td>
                <td>
                    <a asp-controller="Ciudad" asp-action="Details" asp-route-id="@ciudad.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-eye-fill me-1"></i> Ver
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Administracion"))
{
    <a asp-action="AgregarCiudad" asp-route-viajeId="@ViewBag.ViajeId" class="btn btn-success rounded-pill px-4 py-2 mt-3">
        <i class="bi bi-plus-circle me-2"></i> Agregar Ciudad
    </a>
}

<a asp-action="Index" class="btn btn-secondary rounded-pill px-3 py-2 mt-3">
    <i class="bi bi-arrow-left-circle me-1"></i> Volver a Viajes
</a>