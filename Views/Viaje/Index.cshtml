 @model ProyetoSetilPF.ViewModel.ViajeVM

@{
    ViewData["Title"] = "Gestión de Viajes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Listado de Viajes</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Viaje
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.viaje[0].Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.viaje[0].FechaIda)</th>
                    <th>@Html.DisplayNameFor(model => model.viaje[0].FechaVuelta)</th>
                    <th>@Html.DisplayNameFor(model => model.viaje[0].Balance)</th>
                    <th>Ciudades</th>
                    <th>Pasajeros</th>
                    <th>Coordinadores</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.viaje)
                {
                    <tr>
                        <td>@item.Descripcion</td>
                        <td>@item.FechaIda.ToString("dd/MM/yyyy")</td>
                        <td>@item.FechaVuelta.ToString("dd/MM/yyyy")</td>
                        <td class="fw-bold text-success">@item.Balance.ToString("C")</td>
                        <td>
                            @if (item.ViajeCiudad.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var ciudad in item.ViajeCiudad)
                                    {
                                        <li><i class="bi bi-geo-alt text-danger"></i> @ciudad.Ciudad.Descripcion</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Sin ciudades</span>
                            }
                        </td>
                        <td>
                        <td>
                            <a asp-action="VerPasajeros" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                Ver Pasajeros
                            </a>
                        </td>
                        </td>
                        <td>
                            @if (item.ViajeCoordinador.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var coord in item.ViajeCoordinador)
                                    {
                                        <li><i class="bi bi-person-badge-fill text-warning"></i> @coord.Coordinador.Pasaporte</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Sin coordinadores</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                            <hr class="my-2" />
                            <div class="d-grid gap-1">
                                <a asp-controller="Viaje" asp-action="HacerMovimiento" asp-route-viajeId="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-plus-circle"></i> Movimiento
                                </a>
                                <a asp-controller="Viaje" asp-action="VerMovimientos" asp-route-viajeId="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-list-ul"></i> Ver Movimientos
                                </a>
                                <form asp-controller="Viaje" asp-action="SubirPdf" method="post" enctype="multipart/form-data" class="d-flex flex-column mt-2">
                                    <input type="hidden" name="viajeId" value="@item.Id" />
                                    <input type="file" name="archivo" accept="application/pdf" class="form-control form-control-sm mb-2" />
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="bi bi-upload"></i> Subir PDF
                                    </button>
                                </form>
                                <a asp-controller="Viaje" asp-action="DocumentoVista" asp-route-viajeId="@item.Id" class="btn btn-sm btn-secondary">
                                    <i class="bi bi-file-earmark-text"></i> Ver Archivos
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_Paginador" for="@Model.paginador" />
