@model ProyetoSetilPF.Models.PuntoSubida

@{
    ViewData["Title"] = "Eliminar Punto de Subida";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash3-fill me-2"></i>Eliminar Punto de Subida
    </h2>

    <div class="card shadow rounded-3 p-4">
        <h4 class="mb-3">¿Está seguro que desea eliminar este punto de subida?</h4>
        <hr />

        <dl class="row mb-4">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Ciudad</dt>
            <dd class="col-sm-9">@Model.Ciudad</dd>

            <dt class="col-sm-3">Calle</dt>
            <dd class="col-sm-9">@Model.Calle</dd>

            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">@Model.CalleNumero</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3-fill me-1"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>