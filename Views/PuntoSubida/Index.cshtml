@model ProyetoSetilPF.ViewModel.PuntoSubidaVM

@{
    ViewData["Title"] = "Gestión de Puntos de Subida";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-signpost-2 me-2"></i>Puntos de Subida
        </h2>
        <div class="d-flex gap-2 mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Punto
            </a>
            <a asp-action="Eliminadas" class="btn btn-warning">
                <i class="bi bi-trash3-fill me-1"></i> Eliminados
            </a>
        </div>
    </div>
    @using (Html.BeginForm("Index", "PuntoSubida", FormMethod.Get, new { @class = "row g-3 mb-4" }))
    {
        <div class="col-md-4">
            <label class="form-label" for="busqNombre">Nombre</label>
            <div class="input-group">
                <input id="busqNombre" type="text" name="busqNombre" value="@Model.busquedaNombre" placeholder="Nombre" class="form-control" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </div>
    }

 

    <!-- Mensaje -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">@TempData["Mensaje"]</div>
    }

    <!-- Tabla Desktop -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Descripción</th>
                    <th>Ciudad</th>
                    <th>Calle</th>
                    <th>Número</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.puntosubida)
                {
                    <tr>
                        <td>@item.Descripcion</td>
                        <td>@item.Ciudad</td>
                        <td>@item.Calle</td>
                        <td>@item.CalleNumero</td>
                        <td>@(item.Activo ? "Sí" : "No")</td>
                        <td>
                            <div class="d-flex gap-1">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Tarjetas Mobile -->
    <div class="d-block d-md-none">
        @foreach (var item in Model.puntosubida)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="fw-bold text-primary">@item.Descripcion</h5>
                    <p class="mb-1"><strong>Ciudad:</strong> @item.Ciudad</p>
                    <p class="mb-1"><strong>Calle:</strong> @item.Calle</p>
                    <p class="mb-1"><strong>Número:</strong> @item.CalleNumero</p>
                    <p class="mb-1"><strong>Activo:</strong> @(item.Activo ? "Sí" : "No")</p>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginador -->
    <partial name="_Paginador" for="@Model.paginador" />

</div>